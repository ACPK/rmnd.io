<%= simple_form_for @reminder do |f| %>
  <%= f.input :title %>
  <%= f.input :due_at %>
  <%= f.input(
        :repeat_frequency,
        collection: @reminder.class.repeat_frequencies.keys,
        label_method: ->(frequency) do
          t(frequency, scope: "reminders.repeat_frequencies")
        end
      ) %>
  <%= f.input :description %>
  <%= f.submit %>
<% end %>

<ul>
  <%= render @reminders %>
</ul>
