<%= f.input :title %>
<%= f.input :due_date, as: :string, input_html: { type: :datetime } %>
<%= f.input(
      :repeat_frequency,
      collection: f.object.repeat_frequencies.keys,
      include_blank: t("reminders.repeat_frequencies.never"),
      label_method: ->(frequency) do
        t(frequency, scope: "reminders.repeat_frequencies")
      end
    ) %>
<%= f.submit class: "primary-button" %>
